    <div class="main__container">
      <div class="main">
        <input type="checkbox" id="chk" aria-hidden="true" />

        <div class="signup">
          <form
            id="login-form"
            name="login-form"
            action="/register"
            method="POST"
          >
            <label for="chk" aria-hidden="true">Sign up</label>
            <input
              id="email"
              type="text"
              name="username"
              placeholder="Username"
              required
            />
            <input
